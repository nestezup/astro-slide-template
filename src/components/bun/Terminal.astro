---
interface Props {
  title?: string;
  command?: string;
}

const { title = 'bash', command } = Astro.props;
---

<div class="terminal-window">
  <div class="terminal-header">
    <div class="buttons">
      <span class="close"></span>
      <span class="minimize"></span>
      <span class="maximize"></span>
    </div>
    <div class="title">{title}</div>
  </div>
  <div class="terminal-body">
    {command && <div class="command-line"><span class="prompt">$</span> {command}</div>}
    <div class="content">
      <slot />
    </div>
  </div>
</div>

<style>
  .terminal-window {
    background: #1e1e1e;
    border-radius: 8px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.4);
    margin: 1.5rem 0;
    overflow: hidden;
    font-family: 'Menlo', 'Monaco', 'Courier New', monospace;
    border: 1px solid #333;
  }

  .terminal-header {
    background: #2d2d2d;
    padding: 0.8rem;
    display: flex;
    align-items: center;
    position: relative;
  }

  .buttons {
    display: flex;
    gap: 8px;
  }

  .buttons span {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .close { background: #ff5f56; }
  .minimize { background: #ffbd2e; }
  .maximize { background: #27c93f; }

  .title {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    color: #999;
    font-size: 0.9rem;
  }

  .terminal-body {
    padding: 1.5rem;
    color: #fff;
    font-size: 1.1rem;
    line-height: 1.6;
  }

  .command-line {
    color: #4AF626;
    margin-bottom: 1rem;
    font-weight: bold;
  }

  .prompt {
    color: #ffbd2e;
    margin-right: 0.5rem;
  }

  .content {
    color: #e0e0e0;
  }
</style>