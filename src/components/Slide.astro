---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="slide">
  <div class="slide-content">
    <h1 class="slide-title">{title}</h1>
    <div class="slide-body">
      <slot />
    </div>
  </div>
</div>

<style>
  .slide {
    width: 100%;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-background);
    position: relative;
  }

  .slide-content {
    width: 90%;
    max-width: 1200px;
    height: 80vh;
    max-height: 675px;
    padding: 2rem;
    background: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    overflow: hidden;
    position: relative;
    display: flex;
    flex-direction: column;
  }

  .slide-title {
    font-size: 2.5rem;
    font-weight: var(--font-weight-bold);
    color: var(--color-primary);
    margin: 0 0 1.25rem 0;
    line-height: 1.2;
    flex-shrink: 0;
  }

  .slide-body {
    flex: 1;
    overflow-y: auto;
    font-size: 1.25rem;
    line-height: 1.3;
  }

  .slide-content.overflow-warning {
    outline: 3px solid var(--color-warning);
  }

  .slide-content.overflow-warning::after {
    content: "⚠️ 넘침";
    position: absolute;
    top: 10px;
    right: 10px;
    background: var(--color-warning);
    color: white;
    padding: 4px 8px;
    font-size: 0.875rem;
    border-radius: 4px;
    z-index: 100;
  }
</style>