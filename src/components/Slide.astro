---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="slide">
  <div class="slide-content">
    <h1 class="slide-title">{title}</h1>
    <div class="slide-body">
      <slot />
    </div>
  </div>
</div>

<style>
  .slide {
    width: 100%;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-background);
    position: relative;
    overflow: hidden; /* 스크롤 방지 */
  }

  .slide-content {
    width: 100%;
    height: 100%;
    max-width: none;
    max-height: none;
    padding: 3rem 4rem; /* PPT 스타일 여백 */
    background: var(--color-background);
    border: none;
    border-radius: 0;
    overflow: hidden;
    position: relative;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
  }

  .slide-title {
    font-size: 2.8rem;
    font-weight: var(--font-weight-bold);
    color: var(--color-primary);
    margin: 0 0 2rem 0;
    line-height: 1.1;
    flex-shrink: 0;
  }

  .slide-body {
    flex: 1;
    overflow: hidden; /* 내부 스크롤도 원칙적으로 방지 (필요하면 제거) */
    font-size: 1.4rem; /* 폰트 사이즈 키움 */
    line-height: 1.4;
  }


  .slide-content.overflow-warning {
    outline: 3px solid var(--color-warning);
  }

  .slide-content.overflow-warning::after {
    content: "⚠️ 넘침";
    position: absolute;
    top: 10px;
    right: 10px;
    background: var(--color-warning);
    color: white;
    padding: 4px 8px;
    font-size: 0.875rem;
    border-radius: 4px;
    z-index: 100;
  }
</style>