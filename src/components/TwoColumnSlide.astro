---
interface Props {
  title: string;
  leftContent: any;
  rightContent: any;
}

const { title, leftContent, rightContent } = Astro.props;
---

<div class="slide">
  <div class="slide-content">
    <h1 class="slide-title">{title}</h1>
    <div class="slide-columns">
      <div class="slide-left">
        {leftContent}
      </div>
      <div class="slide-right">
        {rightContent}
      </div>
    </div>
  </div>
</div>

<style>
  .slide {
    width: 100%;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-background);
    position: relative;
  }

  .slide-content {
    width: 90%;
    max-width: 1200px;
    height: 80vh;
    max-height: 675px;
    padding: 2rem;
    background: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    overflow: hidden;
    position: relative;
    display: flex;
    flex-direction: column;
  }

  .slide-title {
    font-size: 2.5rem;
    font-weight: var(--font-weight-bold);
    color: var(--color-primary);
    margin: 0 0 1.25rem 0;
    line-height: 1.2;
    flex-shrink: 0;
  }

  .slide-columns {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    flex: 1;
    overflow: hidden;
  }

  .slide-left,
  .slide-right {
    overflow-y: auto;
    display: flex;
    flex-direction: column;
  }

  @media (max-width: 768px) {
    .slide-columns {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }
</style>
